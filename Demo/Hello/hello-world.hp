func main()
{
    let name = readLine("What's your name?")
    let age = getAge()
    print("Hello " + name + "!")
    print("I am " + string(age) + ".")
}

func getName() -> string
{
    let name = input()
    
    return name
}

func readLine(prompt: string) -> string
{
    print(prompt)
    
    return getName()
}

func getAge() -> int
{
    let age = input()
    
    return int(age)
 }
